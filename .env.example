# Environment Configuration
# Copy this file to .env and fill in your values

# Path to your codebase to index
REPO_PATH=/path/to/your/codebase

# Path to store index metadata (for incremental updates)
MEMORY_FILE_PATH=./memory/index-metadata.json

# Vector Store Type: 
#   - memory: In-memory store (no Docker needed, stores in ./vector_storage/)
#   - qdrant: Local Qdrant server (requires Docker at localhost:6333)
#   - cloud: Qdrant Cloud (requires cloud URL + API key)
VECTOR_STORE_TYPE=memory

# Qdrant Configuration
# For local Docker: QDRANT_URL=http://localhost:6333
# For Qdrant Cloud: QDRANT_URL=https://your-cluster.gcp.cloud.qdrant.io:6333
QDRANT_URL=http://localhost:6333

# Qdrant API Key (only needed for VECTOR_STORE_TYPE=cloud)
# Example: eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJhY2Nlc3MiOiJtIn0.xxx
QDRANT_API_KEY=

# Qdrant Collection Name
QDRANT_COLLECTION=codebase

# Gemini API Key (get from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_api_key_here

# Watch mode (set to false to disable real-time watching)
WATCH_MODE=true

# Batch size for embedding
BATCH_SIZE=50
